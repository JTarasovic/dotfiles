[Unit]
Description=kube config file watcher
ConditionFileIsExecutable=%h/go/bin/simplewatcher

[Service]
ExecStart=%h/go/bin/simplewatcher \
            -path=~/.kube/config \
            -log-format=plain \
            -- pkill --signal "SIGRTMIN+1" "i3status-rs"



Restart=always
RestartSec=3

[Install]
WantedBy=default.target

