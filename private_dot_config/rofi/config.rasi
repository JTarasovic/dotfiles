configuration {
	modi: "combi,calc";
	font: "Iosevka Nerd Font Propo 13";
	show-icons: true;
	terminal: "alacritty";
	icon-theme: "Arc";
	combi-modi: "drun,run,window,ssh";
	matching: "fuzzy";
    timeout {
        action: "kb-cancel";
        delay:  0;
    }
    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
}

@theme "nord"
